{
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/main.py"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/frontend/assets/$1"
    },
    {
      "source": "/(.*)\\.(png|jpg|jpeg|gif|svg|ico)",
      "destination": "/frontend/$1.$2"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/index.html"
    }
  ]
}